<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean class="org.jahia.modules.social.RemoveSocialConnectionAction">
        <property name="name" value="removesocialconnection"/>
    </bean>

    <bean class="org.jahia.modules.social.SendMessageAction">
        <property name="name" value="sendmessage"/>
        <property name="socialService" ref="socialService"/>
    </bean>

    <bean id="socialService" class="org.jahia.modules.social.SocialService"/>

    <bean class="org.jahia.services.content.rules.ModuleGlobalObject">
        <property name="globalRulesObject">
            <map>
                <entry key="socialService" value-ref="socialService" />
            </map>
        </property>
    </bean>

</beans>